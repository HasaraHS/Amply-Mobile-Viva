<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Dark gray / black background -->
    <solid android:color="#1f2937"/>

    <!-- Rounded corners like Tailwind's rounded-md (~6dp) -->
    <corners android:radius="12dp"/>

    <!-- Optional padding to make it visually larger -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>
</shape>
