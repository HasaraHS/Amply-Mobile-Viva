<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic to your local server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.8.154/</domain>
    </domain-config>

    <!-- Optional: allow all cleartext connections globally (for testing only) -->
    <base-config cleartextTrafficPermitted="true" />
</network-security-config>
